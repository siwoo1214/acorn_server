package day06Prac;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;

public class AcornDAO {
	String driver="oracle.jdbc.driver.OracleDriver";
	String url="jdbc:oracle:thin:@localhost:1521:xe";
	String user="system";
	String password="1234";
	
	public Connection getConnect() {
		Connection con = null;
		
		try {
			Class.forName(driver);  //드라이버 연결하고
			//정보들을 이용해서 데이터베이스에 연결 시도
			con = DriverManager.getConnection(url, user, password);
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return con;
	}
	
	public Acorn selecrOne(String id) {
		Connection con = getConnect();
		String sql = "select * from acorntbl where id = ?";
		Acorn acorn = null; //메소드의 지역변수로 설정해놔야지 if문 안에서만 
		                    //국한되지 않고 사용할 수 있음
		try {
			PreparedStatement pst = con.prepareStatement(sql);
			pst.setString(1, id);
			ResultSet rs = pst.executeQuery();
			
			if(rs.next()) {
				String newId = rs.getString(1);
				String newPw = rs.getString(2);
				String newName = rs.getString(3);
				
				acorn = new Acorn(newId, newPw, newName);
			}
			
			rs.close();
			pst.close();
			con.close();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		return acorn;
	}
	
	public ArrayList<Acorn> selectAll(){
		ArrayList<Acorn> list = new ArrayList<>();
		Connection con = getConnect();
		String sql = "select * from acorntbl";
		
		try {
			PreparedStatement pst = con.prepareStatement(sql);
			ResultSet rs = pst.executeQuery(sql);
			
			while(rs.next()) {
				String id = rs.getString(1);
				String pw= rs.getString(2);
				String name = rs.getString(3);
				
				Acorn acorn = new Acorn(id,pw,name);
				list.add(acorn);
			}
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return list;
	}
	
	public static void main(String[] args) {
		AcornDAO a = new AcornDAO();
		Acorn ys = a.selecrOne("jask");
		System.out.println(ys);
	}
}
